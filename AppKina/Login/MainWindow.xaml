<Window x:Class="AppKina.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppKina"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="Black" MinWidth="800" MinHeight="450">
    <Grid>


        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image Source="pack://application:,,,/elementyGraficzne/logoCzarneTlo.png"  HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" />
        <Image Source="pack://application:,,,/elementyGraficzne/fale-kino (1).png" HorizontalAlignment="Left" VerticalAlignment="Bottom" Grid.RowSpan="2" Stretch="Fill" />
        
        <Button Content="Rozpocznij" FontSize="30" FontWeight="Bold" Foreground="White" Grid.Row="1" Background="Black" Width="200" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Rozpocznij"/>

    </Grid>
</Window>
